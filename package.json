{
  "name": "@gavdi/cap-mcp",
  "version": "1.3.0",
  "description": "MCP Plugin for CAP",
  "keywords": [
    "MCP",
    "CAP",
    "plugin",
    "SAP"
  ],
  "license": "Apache-2.0",
  "author": "Simon Vestergaard Laursen",
  "type": "commonjs",
  "main": "cds-plugin.js",
  "files": [
    "lib/**/*",
    "package.json",
    "cds-plugin.js",
    "index.cds",
    "LICENSE.md"
  ],
  "repository": "github:gavdilabs/cap-mcp-plugin",
  "scripts": {
    "mock": "npm run start --workspace=test/demo",
    "mock:watch": "npm run build && npm run watch --workspace=test/demo",
    "test": "NODE_ENV=test jest --silent --testTimeout=30000",
    "test:unit": "NODE_ENV=test jest --silent test/unit --testTimeout=30000",
    "test:integration": "NODE_ENV=test jest --silent test/integration --testTimeout=30000",
    "test:coverage": "NODE_ENV=test jest --silent --coverage --testTimeout=30000",
    "test:coverage:unit": "NODE_ENV=test jest --silent --coverage test/unit --testTimeout=30000",
    "test:coverage:integration": "NODE_ENV=test jest --silent --coverage test/integration --testTimeout=30000",
    "coverage:report": "NODE_ENV=test jest --silent --coverage --passWithNoTests --testTimeout=30000",
    "build": "tsc",
    "inspect": "npx @modelcontextprotocol/inspector",
    "prepare": "husky",
    "lint": "eslint",
    "lint-staged": "lint-staged",
    "format": "prettier --check ./src",
    "format:fix": "prettier --write ./src \"**/*.json\"",
    "build:watch": "tsc --watch",
    "release": "release-it"
  },
  "peerDependencies": {
    "@sap/cds": "^9",
    "express": "^4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@sap/xssec": "^4.9.1",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "zod": "^3.25.67",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.13.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/sinon": "^17.0.4",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.3",
    "release-it": "^19.0.4",
    "sinon": "^21.0.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.json": [
      "prettier --write"
    ],
    "*.ts": [
      "eslint",
      "prettier --write"
    ],
    "*.js": [
      "eslint",
      "prettier --write"
    ]
  },
  "workspaces": [
    "test/demo"
  ]
}
